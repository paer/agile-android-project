<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Placeholder message"
        android:id="@+id/issue_list_element_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlaceholderName"
        android:id="@+id/issue_list_element_name"
        android:layout_below="@+id/issue_list_element_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder time"
        android:layout_marginLeft="5dp"
        android:id="@+id/issue_list_element_time"
        android:layout_below="@+id/issue_list_element_title"
        android:layout_toRightOf="@+id/issue_list_element_name"
        android:layout_toEndOf="@+id/issue_list_element_name" />
</RelativeLayout>